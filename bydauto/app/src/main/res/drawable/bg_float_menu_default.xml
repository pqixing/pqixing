<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#666" />

            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="@android:color/holo_orange_light" android:dashWidth="5dp" android:dashGap="0dp" />

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#333" />

            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="@android:color/holo_blue_light" android:dashWidth="5dp" android:dashGap="0dp" />

        </shape>
    </item>
    <item>

        <shape android:shape="rectangle">
            <solid android:color="#5000" />
            <corners android:radius="30dp" />
            <stroke android:width="1px" android:color="@android:color/white" android:dashWidth="5dp" android:dashGap="0dp" />

        </shape>
    </item>
</selector>
