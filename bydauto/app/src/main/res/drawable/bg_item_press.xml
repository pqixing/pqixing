<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#8ff0" />
            <stroke android:width="1dp" android:color="#8fff" android:dashWidth="1dp" android:dashGap="0dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#8888" />
            <stroke android:color="#8fff" android:width="1dp" android:dashGap="0dp" android:dashWidth="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#0000" />
            <stroke android:width="1dp" android:color="#0000" android:dashWidth="1dp" android:dashGap="0dp" />
        </shape>
    </item>
</selector>