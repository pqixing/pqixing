<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_float_height"
        android:background="@drawable/bg_bottom_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_music_open"
                    style="@style/def_button_navigation"
                    android:text="音乐" />

                <ImageView
                    android:id="@+id/btn_music_pre"
                    style="@style/def_button_navigation"
                    android:src="@android:drawable/ic_media_previous" />

                <ImageView
                    android:id="@+id/btn_music_play"
                    style="@style/def_button_navigation"
                    android:src="@android:drawable/ic_media_play" />

                <ImageView
                    android:id="@+id/btn_music_next"
                    style="@style/def_button_navigation"
                    android:src="@android:drawable/ic_media_next" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/ll_ac_control"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_ac_toggle"
                style="@style/def_button_navigation"
                android:text="空调\n温度" />

            <TextView
                android:id="@+id/btn_ac_temp_18"
                style="@style/def_button_navigation"
                android:text="18" />

            <TextView
                android:id="@+id/btn_ac_temp_20"
                style="@style/def_button_navigation"
                android:text="20" />

            <TextView
                android:id="@+id/btn_ac_temp_23"
                style="@style/def_button_navigation"
                android:text="23" />

            <TextView
                android:id="@+id/btn_ac_temp_24"
                style="@style/def_button_navigation"
                android:text="24" />

            <TextView
                android:id="@+id/btn_ac_temp_25"
                style="@style/def_button_navigation"
                android:text="25" />

            <TextView
                android:id="@+id/btn_ac_temp_26"
                style="@style/def_button_navigation"
                android:text="26" />

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_map_open"
                style="@style/def_button_navigation"
                android:text="地图" />

            <TextView
                android:id="@+id/btn_map_home"
                style="@style/def_button_navigation"
                android:text="回家" />

            <TextView
                android:id="@+id/btn_map_company"
                style="@style/def_button_navigation"
                android:text="公司" />

            <TextView
                android:id="@+id/btn_map_address_1"
                style="@style/def_button_navigation"
                android:text="后海村" />

        </LinearLayout>

    </LinearLayout>

    <com.pqixing.bydauto.ui.TouchBarContentView
        android:id="@+id/ll_touch_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal" />
</merge>