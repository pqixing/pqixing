<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:orientation="horizontal">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/menus"
        android:layout_width="@dimen/single_item_width_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_float_ac_control"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/ll_control"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:background="@drawable/bg_float_ac_control"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/btn_music_open"
                style="@style/def_textview_status_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="音乐" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/btn_music_open"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_music_pre"
                    style="@style/def_button_navigation"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_media_previous" />

                <ImageView
                    android:id="@+id/btn_music_play"
                    style="@style/def_button_navigation"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_media_pause" />

                <ImageView
                    android:id="@+id/btn_music_next"
                    style="@style/def_button_navigation"
                    android:scaleType="center"
                    android:src="@android:drawable/ic_media_next" />

            </LinearLayout>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_apps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/def_textview_status_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空调设置" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_ac_state"
                android:layout_width="130dp"
                android:layout_height="match_parent" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_ac_temp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_ac_wind"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_others"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:visibility="gone" />

</LinearLayout>