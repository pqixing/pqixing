<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="wrap_content"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="60dp"
    android:maxHeight="600dp"
    android:orientation="horizontal">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_layout"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/menus"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_float_ac_control"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:visibility="visible" />
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_control"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:background="@drawable/bg_float_ac_control"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <RelativeLayout
            android:id="@+id/rl_music_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_music_icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo" />

            <ImageView
                android:id="@+id/btn_music_pre"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_toEndOf="@+id/iv_music_icon"
                android:background="@drawable/bg_single_item_app"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_media_previous" />

            <ImageView
                android:id="@+id/btn_music_play"
                android:layout_width="70dp"
                android:layout_height="match_parent"

                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/btn_music_pre"
                android:background="@drawable/bg_single_item_app"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_media_pause" />

            <ImageView
                android:id="@+id/btn_music_next"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"

                android:layout_toEndOf="@+id/btn_music_play"
                android:background="@drawable/bg_single_item_app"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_media_next" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dp"
            android:background="@android:color/background_light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_ac_state"
                android:layout_width="140dp"
                android:layout_margin="10dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2" />

            <TextView
                android:id="@+id/tv_temp_name"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/rcv_ac_state"
                android:background="@drawable/bg_single_item_app"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="温度"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:textColor="@android:color/black" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_ac_temp"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_wind_name"
                android:layout_toEndOf="@+id/rcv_ac_state"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            <TextView
                android:id="@+id/tv_wind_name"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/rcv_ac_temp"
                android:background="@drawable/bg_single_item_app"
                android:gravity="center"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:text="风量"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                tools:textColor="@android:color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_ac_wind"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/tv_wind_name"
                android:layout_toEndOf="@+id/rcv_ac_temp"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/background_light" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_apps"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_others"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@android:color/background_light"
        android:visibility="gone" />

</LinearLayout>