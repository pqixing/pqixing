<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="350dp"
    android:layout_height="45dp"
    tools:background="#ccc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp">


        <com.pqixing.bydauto.widget.SingleView
            android:id="@+id/sv_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_float_item_press"
            app:icon="@drawable/icon_menu_back"
            app:layout="@layout/single_item_menu_icon" />

        <com.pqixing.bydauto.widget.SingleView
            android:id="@+id/sv_apps"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_float_item_press"
            app:icon="@drawable/icon_menu_home"
            app:layout="@layout/single_item_menu_icon" />

        <com.pqixing.bydauto.widget.SingleView
            android:id="@+id/sv_air"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_float_item_press"
            app:icon="@drawable/icon_menu_ac_logo"
            app:layout="@layout/single_item_menu_ac" />

        <com.pqixing.bydauto.widget.SingleView
            android:id="@+id/sv_soc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_float_item_press"
            app:icon="@drawable/icon_menu_soc"
            app:layout="@layout/single_item_menu_soc" />

        <com.pqixing.bydauto.widget.SingleView
            android:id="@+id/sv_music"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_float_item_press"
            app:icon="@drawable/icon_menu_music"
            app:layout="@layout/single_item_menu_icon" />


    </LinearLayout>

    <com.pqixing.bydauto.widget.SeekbarView
        android:id="@+id/rl_slide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/seekbar_progress_drawable"
        android:visibility="gone" />


</FrameLayout>